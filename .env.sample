# HTTP and MCP ports exposed on the host
APP_PORT=8000
MCP_PORT=7800

# Container image reference (override to pin a specific tag)
PDF_RAG_IMAGE=ghcr.io/tekgnosis-net/pdf-rag-mcp-server:latest

# Host paths (or named volumes) for persistent data
PDF_RAG_UPLOADS=./data/uploads
PDF_RAG_CHROMA_DB=./data/chroma_db
PDF_RAG_MODEL_CACHE=./data/model_cache
PDF_RAG_WATCH_DIR=/app/auto_ingest
PDF_RAG_WATCH_VOLUME=./data/auto_ingest

# Runtime device for sentence-transformers (cpu or cuda)
SENTENCE_TRANSFORMERS_DEVICE=cpu

# Optional cache override for sentence-transformers downloads
SENTENCE_TRANSFORMERS_CACHE=/home/appuser/.cache/torch/sentence_transformers

# Poll interval (seconds) for automatic ingestion watcher
PDF_RAG_WATCH_INTERVAL=5
PDF_RAG_WATCH_MAX_WORKERS=1
